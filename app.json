{
  "addons": ["heroku-postgresql", "heroku-redis"],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "HEROKU_DEBUG_RAILS_RUNNER": "1"
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "name": "prepdd",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate db:seed"
  },
  "stack": "heroku-18",
  "environments": {
    "test": {
      "addons": ["heroku-postgresql:in-dyno"],
      "env": {}
    }
  }
}
